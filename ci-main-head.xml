<!--

ci-main-head (5.0) is used as template for manifests that captures HEAD refs
** LONG TERM SUPPORT 04/2028 **

INITIALIZE

mkdir -p /srv/repo/distro-core && cd /srv/repo/distro-core
printf "\n\ny\n\n" | repo init -u https://github.com/distro-core/distro-manifest.git -b main -m ci-main-head.xml -\-no-clone-bundle -\-groups default,workflows
repo sync -\-force-sync -\-force-checkout -\-force-remove-dirty -\-no-repo-verify

RECOMMENDED BEFORE OPENING IN IDE

git -C .repo/manifests branch -D main
git -C .repo/manifests checkout -\-track origin/main
git -C .repo/manifests branch -D default

repo forall -c 'echo $REPO_PATH $REPO_RREV; git checkout -\-track $(git remote)/$REPO_RREV'
repo status | tee /dev/null

FINALIZE

timestamp="$(date -Isec)"
branch_base="main"
branch_name="ci-${branch_base}-refs-${timestamp//:/.}"
git -C .repo/manifests checkout -B ${branch_name} origin/${branch_base}
repo manifest -\-revision-as-HEAD -\-output-file .repo/manifests/ci-${branch_base}-refs.xml -\-pretty
git -C .repo/manifests add ci-${branch_base}-refs.xml
git -C .repo/manifests commit -\-message "ci-${branch_base}-refs: ${timestamp}" -\-signoff -\-gpg-sign
git -C .repo/manifests push -\-set-upstream origin ${branch_name}
git -C .repo/manifests checkout ${branch_base}

-->

